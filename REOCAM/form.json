{
    "elements": [
        {
            "type": "ExpansionPanel",
            "caption": "Kameraeinstellungen",
            "items": [
                {
                    "type": "ValidationTextBox",
                    "name": "CameraIP",
                    "caption": "Kamera-IP"
                },
                {
                    "type": "ValidationTextBox",
                    "name": "Username",
                    "caption": "Benutzername"
                },
                {
                    "type": "PasswordTextBox",
                    "name": "Password",
                    "caption": "Passwort"
                },
                {
                    "type": "Select",
                    "name": "StreamType",
                    "caption": "Streamtyp",
                    "options": [
                        { "caption": "Mainstream", "value": "main" },
                        { "caption": "Substream", "value": "sub" }
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Webhook-Information",
            "items": [
                {
                    "type": "Label",
                    "caption": "Der aktuelle Webhook-Pfad ist:"
                },
                {
                    "type": "Label",
                    "name": "WebhookPath",
                    "caption": ""
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Optionen",
            "items": [
                {
                    "type": "CheckBox",
                    "name": "ShowWebhookVariables",
                    "caption": "Webhook-Variablen anzeigen"
                },
                {
                    "type": "CheckBox",
                    "name": "ShowBooleanVariables",
                    "caption": "Boolean-Variablen anzeigen"
                },
                {
                    "type": "CheckBox",
                    "name": "ShowSnapshots",
                    "caption": "Snapshots anzeigen"
                },
                {
                    "type": "CheckBox",
                    "name": "ShowArchives",
                    "caption": "Archive anzeigen"
                },
                {
                    "type": "NumberSpinner",
                    "name": "MaxArchiveImages",
                    "caption": "Maximale Anzahl Bilder im Archiv",
                    "minimum": 1
                }
            ]
        }
    ]
}
