{
    "elements": [
        {
            "type": "ValidationTextBox",
            "name": "WebhookPath",
            "caption": "Webhook-Pfad",
            "required": true,
            "default": "/hook/reolink"
        },
        {
            "type": "ValidationTextBox",
            "name": "CameraIP",
            "caption": "Kamera-IP-Adresse",
            "required": true
        },
        {
            "type": "ValidationTextBox",
            "name": "Username",
            "caption": "Benutzername"
        },
        {
            "type": "PasswordTextBox",
            "name": "Password",
            "caption": "Passwort"
        },
        {
            "type": "Select",
            "name": "StreamType",
            "caption": "Stream-Typ",
            "options": [
                { "label": "Main", "value": "main" },
                { "label": "Sub", "value": "sub" }
            ]
        },
        {
            "type": "NumberSpinner",
            "name": "MaxArchiveImages",
            "caption": "Maximale Anzahl an Archivbildern",
